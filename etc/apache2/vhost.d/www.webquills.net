<VirtualHost *:80>
ServerName webquills.net
ServerAlias webquills.org www.webquills.org
Redirect permanent / http://www.webquills.net/
</VirtualHost>
<VirtualHost *:80>
ServerName www.webquills.net
DocumentRoot /usr/local/share/apache2/sites/www.webquills.net/current/htdocs

# Conditional ENV for SSI magics
BrowserMatchNoCase MSIE MSIE
BrowserMatchNoCase Windows WINDOWS

# Main content area
<Directory /usr/local/share/apache2/sites/www.webquills.net/current/htdocs>
    Options Includes FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from All

    AddHandler server-parsed .htm .html

</Directory>

</VirtualHost>
